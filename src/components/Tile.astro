---
interface Props {
  title: string;
  description: string;
  class?: string;
  backgroundIcon?: string;
  foregroundIcon?: string;
}

const { title, description, class: className, backgroundIcon, foregroundIcon } = Astro.props;
---

<div class:list={["p-6 rounded-lg flex flex-col items-start gap-4", className]}>
  <div style={{ background: backgroundIcon, color: foregroundIcon }} class="rounded p-4">
    <slot name="icon" />
  </div>
  <div>
    <h3 class="text-lg font-bold">{title}</h3>
    <p class="text-gray-800">{description}</p>
  </div>
</div>